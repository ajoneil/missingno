{
  "app-id": "net.andyofniall.MissingNo",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "missingno",
  "finish-args": [
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=all",
    "--socket=pulseaudio"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/missingno/cargo",
      "CARGO_NET_OFFLINE": "true"
    }
  },
  "modules": [
    {
      "name": "missingno",
      "buildsystem": "simple",
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm755 target/release/missingno /app/bin/missingno",
        "install -Dm644 net.andyofniall.MissingNo.desktop /app/share/applications/net.andyofniall.MissingNo.desktop",
        "install -Dm644 net.andyofniall.MissingNo.metainfo.xml /app/share/metainfo/net.andyofniall.MissingNo.metainfo.xml",
        "install -Dm644 net.andyofniall.MissingNo.svg /app/share/icons/hicolor/scalable/apps/net.andyofniall.MissingNo.svg"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        },
        "cargo-sources.json"
      ]
    }
  ]
}
